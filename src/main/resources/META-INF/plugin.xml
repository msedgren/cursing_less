<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.cursing_less</id>
    <name>Cursing_Less</name>
    <vendor>mse</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <applicationListeners>
        <listener class="org.cursing_less.listeners.CursingApplicationListener"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="cursing_less"
                           displayType="BALLOON"
                           key="cursing_less.notification.group.name"/>
        <postStartupActivity implementation="org.cursing_less.listeners.CursingApplicationListener$StartupActivity"/>

        <editorActionHandler action="EditorDelete" implementationClass="org.cursing_less.handler.CursingDeletionHandler"/>
        <editorActionHandler action="EditorBackSpace"
                             implementationClass="org.cursing_less.handler.CursingDeletionHandler"/>
        <editorFactoryListener implementation="org.cursing_less.listeners.CursingEditorListener" />
    </extensions>
</idea-plugin>
